@section Style
    {
    <link rel="stylesheet" href="~/css/ErrorStyle.css" />
}

<div class="container container-center">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="error-message"><span>Oops!</span></div>
        </div>
        <div class="col-md-7">
            <div class="row ms-5">
                <div class="col-md-12">
                    @if (ViewData["StatusCode"] != null)
                    {
                        <h1 class="display-1">@ViewData["StatusCode"]</h1>
                    }
                </div>

                <div class="col-md-12">
                    <p class="message">@ViewData["ErrorMessage"]</p>
                </div>
            </div>
        </div>
    </div>
</div>