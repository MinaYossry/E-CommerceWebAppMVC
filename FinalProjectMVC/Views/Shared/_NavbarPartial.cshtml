@using FinalProjectMVC.Areas.AdminPanel.Models;
@using FinalProjectMVC.Constants;
@using FinalProjectMVC.RepositoryPattern;
@inject IRepository<Category> _categoryRepo

<nav class="navbar navbar-expand-lg bg-body-tertiary" style="height: 50px">
    <div class="container-fluid">
        <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index" aria-current="page">

            <img src="~/WebsiteLogo/meshamazonlogo-small.png" style="width: 40px; height: 40px;" />

            <strong>Mesh-Amazon</strong>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">


                <li class="nav-item">
                    <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index" aria-current="page">Home</a>
                </li>

                @if (User.IsInRole(Roles.Admin.ToString()))
                {
                    <li class="nav-item">
                        <a class="nav-link active" asp-area="AdminPanel" asp-controller="Admin" aria-current="page">Admin Dashboard</a>
                    </li>
                }


                @if (User.IsInRole(Roles.Seller.ToString()))
                {
                    <li class="nav-item">
                        <a class="nav-link active" asp-area="SellerPanel" asp-controller="Products" asp-action="Index" aria-current="page">Seller Dashboard</a>
                    </li>
                }


                <li class="nav-item">
                    <a class="nav-link active" asp-area="CustomerPanel" asp-controller="Products" asp-action="Index" aria-current="page">Products</a>
                </li>


            </ul>
            <form asp-action="Search" asp-controller="Products" asp-area="CustomerPanel" method="get" class="d-flex flex-grow-1" role="search">
                <input name="product_Name" class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
            
            

            <partial name="_LoginPartial" />
        </div>
    </div>
</nav>