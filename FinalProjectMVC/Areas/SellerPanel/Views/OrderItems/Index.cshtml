@model IEnumerable<FinalProjectMVC.Areas.SellerPanel.ViewModel.SellerOrderItemViewModel>


<div class="container">
    <h1>Seller Orders</h1>
    <div class="accordion" id="accordionExample">
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="card-header" id="@($"heading{item.Product.Id}")">
                <h2 class="mb-0">
                    <button class="btn btn-link btn-block text-left collapsed" type="button" data-toggle="collapse" data-target="@($"#collapse{item.Product.Id}")" aria-expanded="false" aria-controls="@($"collapse{item.Product.Id}")">
                        <span class="font-weight-bold">Order:</span> #@item.Id
                        <span class="text-muted">|</span>
                        <span class="font-weight-bold"></span>
                            <span class="font-weight-bold">@item.Product.Name</span>
                            <span class="text-muted">|</span>
                            <span class="font-italic">@item.OrderDate.ToShortDateString()</span>
                        <span class="badge badge-pill float-right @((item.Status == OrderStatus.Delivered) ? "badge-success" : "badge-danger")">
                            @((item.Status == OrderStatus.Delivered) ? "Solved" : "Unsolved")
                        </span>
                    </button>
                </h2>
            </div>

            <div id="@($"collapse{item.Product.Id}")" class="collapse" aria-labelledby="@($"heading{item.Product.Id}")" data-parent="#accordionExample">
                <div class="card-body">
                    <p>@item.Customer.ApplicationUser.FirstName @item.Customer.ApplicationUser.LastName</p>
