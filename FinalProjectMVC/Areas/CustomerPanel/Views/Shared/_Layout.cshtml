</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                

                    <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index" aria-current="page">
                    <img src="~/WebsiteLogo/meshamazonlogo-small.png" style="width: 40px; height: 40px;" />
                        <strong>MeshAmazon</strong>
                    </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                         <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index" aria-current="page">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link active" asp-area="CustomerPanel" asp-controller="Products" asp-action="Index" aria-current="page">Products</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link active" asp-area="CustomerPanel" asp-controller="Orders" asp-action="Index" aria-current="page">Orders</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link active" asp-area="CustomerPanel" asp-controller="Cart" asp-action="Index" aria-current="page">Cart</a>
                        </li>

                       
                    </ul>
                    <form asp-action="Search" asp-controller="Products" asp-area="CustomerPanel" class="d-flex flex-grow-1" role="search">
                        <input name="product_Name" class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
        @RenderSection("filterSection",false);

    </header>

    @RenderSection("Header", false)


    <div class="container">
        @RenderBody()
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>


<script>

 

    loadCartCount();
 async function loadCartCount() {

     try{
         const response = await fetch('/CustomerPanel/Cart/GetCartCount');
        if (response.ok) {

            //console.log("on resposne event 👍 ");

            const cartCount = await response.json();
            document.getElementById('cartCount').textContent = cartCount;
            }

         }
        
     catch (err) {
           console.log(err);
         }
    
    }


    // This checks the element because it's only used by one view of which the Layout serves.

    const cartForm = document.getElementById('cartForm');
    if (cartForm) {
    document.getElementById('cartForm').addEventListener('submit', async (event) => {

        //console.log("QuerySelector event got activated");
        
        // This line prevent the `Post` being done by the from , 
        // So we are not moved to another page.
        event.preventDefault();

        // The data filled in the form. 
        const formData = new FormData(event.target);

        //console.log(event.target.action);
        const response = await fetch(event.target.action, {

            
            method: 'POST',
            body: formData
        });
        if (response.ok) {

             //console.log("QuerySelector event => response recived ");
            const cartCount = await response.json();
            document.getElementById('cartCount').textContent = cartCount;
        }

        // Close the modal window, as we stopped refresh and redirecting.
        const modalElement = document.getElementById('cartModal');
        const modal = bootstrap.Modal.getInstance(modalElement);
        modal.hide();
    });

    }

         
   



</script>
</html>
