@model IEnumerable<FinalProjectMVC.Areas.AdminPanel.ViewModel.AdminReportsReviewsViewModel>

@{
    ViewData["Title"] = "Reports";
}


<div class="accordion" id="accordionExample">
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="card-header" id="@($"heading{item.ReportId}")">
                <h2 class="mb-0">
                    <button class="btn btn-link btn-block text-left collapsed" type="button" data-toggle="collapse" data-target="@($"#collapse{item.ReportId}")" aria-expanded="false" aria-controls="@($"collapse{item.ReportId}")">
                        <span class="font-weight-bold">Report:</span> #@item.ReportId
                        <span class="text-muted">|</span>
                        <span class="font-weight-bold">@item.Name</span>
                        <div class="ml-auto">
                            <span class="font-weight-bold">@item.SellerName</span>
                            <span class="text-muted">|</span>
                            <span class="font-italic">@item.CreatedDate</span>
                        </div>
                        <span class="badge badge-pill float-right @((item.IsSolved) ? "badge-success" : "badge-danger")">
                            @((item.IsSolved) ? "Solved" : "Unsolved")
                        </span>
                    </button>
                </h2>
            </div>

            <div id="@($"collapse{item.ReportId}")" class="collapse" aria-labelledby="@($"heading{item.ReportId}")" data-parent="#accordionExample">
                <div class="card-body">
                    <p>@item.Description</p>

                    <div class="accordion" id="innerAccordion">
                        <div class="card">
                            <div class="card-header" id="@($"heading{item.ReportId}{item.ReviewId}{item.Name}")">
                                <h2 class="mb-0">
                                    <button class="btn btn-link btn-block text-left collapsed" type="button" data-toggle="collapse" data-target="@($"#collapse{item.ReportId}{item.ReviewId}{item.Name}")" aria-expanded="false" aria-controls="@($"collapse{item.ReportId}{item.ReviewId}{item.Name}")">
                                        <span class="font-weight-bold">Review:</span> #@item.ReviewId
                                        <span class="text-muted">|</span>
                                        <span class="font-weight-bold">@item.ReviewName</span>
                                        <div class="ml-auto">
                                            <span class="font-weight-bold">@item.CustomerName</span>
                                        </div>
                                    </button>
                                </h2>

                            </div>

                            <div id="@($"collapse{item.ReportId}{item.ReviewId}{item.Name}")" class="collapse" aria-labelledby="@($"heading{item.ReportId}{item.ReviewId}{item.Name}")" data-parent="#innerAccordion">
                                <div class="card-body">
                                    <p>@item.ReviewDescription</p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="card-footer">
                @if(item.IsSolved)
                {
                    <p class="text-success">This report was solved on @item.SolveDate</p>
                }
                else
                {
                    <button class="btn btn-success mr-2" type="button" data-toggle="modal" data-target="@($"#markAsSolvedModal{item.ReportId}")">Mark as Solved</button>
                    <button class="btn btn-warning mr-2" type="button" onclick="blockUser(@item.SellerId)">Block User</button>
                    <button class="btn btn-danger" type="button" onclick="deleteReview(@item.ReviewId)">Delete Review</button>
                }
            </div>
        </div>

        <!-- Mark as Solved Modal -->
        <div class="modal fade" id="@($"markAsSolvedModal{item.ReportId}")" tabindex="-1" role="dialog" aria-labelledby="@($"markAsSolvedModalLabel{item.ReportId}")" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="@($"markAsSolvedModalLabel{item.ReportId}")">Mark Report #@item.ReportId as Solved?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to mark Report #@item.ReportId as solved?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <form asp-action="MarkAsSolved" method="post">
                            <input type="hidden" name="id" value="@item.ReportId" />
                            <button type="submit" class="btn btn-primary">Mark as Solved</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>